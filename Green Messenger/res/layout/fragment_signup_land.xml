<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/signup_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/i_chat_logo" />

        <com.via.green.customizes.CustomTextView
            android:id="@+id/signup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Creat an account"
            android:textColor="#575757"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/signup_username_field"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/username_field"
            android:orientation="vertical" >

            <com.via.green.customizes.CustomEditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:background="#FFFFFF"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:textColor="#575757"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_password_field"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/password_field"
            android:orientation="vertical" >

            <com.via.green.customizes.CustomEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:background="#FFFFFF"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#575757"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_password_confirm_field"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/password_field"
            android:orientation="vertical" >

            <com.via.green.customizes.CustomEditText
                android:id="@+id/passwordAgain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:background="#FFFFFF"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:textColor="#575757"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_signup_and_signup_layout"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <com.via.green.customizes.CustomTextView
                android:id="@+id/cancel_signUp"
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:background="@drawable/register_login_button"
                android:gravity="center"
                android:text="Back"
                android:textColor="#00CC33"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="40sp"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/signup_waiting_block"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <com.via.green.gifmoviewview.GifMovieView
                        android:id="@+id/signup_progress_bar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:onClick="onGifClick" />

                    <com.via.green.customizes.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Waiting .."
                        android:textSize="14dp" />
                </LinearLayout>

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/signUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:background="@drawable/login_login_button"
                    android:gravity="center"
                    android:text="Sign up"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </RelativeLayout>
        </LinearLayout>

        <com.via.green.customizes.CustomTextView
            android:id="@+id/signup_fogot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="Forgot your your password ? "
            android:textColor="#888888"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>