<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00CC33"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_white" />

        <com.via.green.customizes.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Personal setting"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.via.green.customizes.CustomTextView
                android:id="@+id/fragment_setting_add_friend"
                android:layout_width="25dp"
                android:layout_height="29dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/contact" />

            <com.via.green.customizes.CustomTextView
                android:id="@+id/fragment_setting_conversation"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/message" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/fragment_home_personal"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/setting" />

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/fragment_home_add_conversation_triangle"
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/triangle"
                    android:gravity="bottom" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/avatar_circle_viet_anh" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <com.via.green.customizes.CustomTextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_login_button"
                    android:gravity="center"
                    android:text="Change password"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp" />

                <com.via.green.customizes.CustomTextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/cancel_button"
                    android:gravity="center"
                    android:text="Change avatar"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.via.green.customizes.CustomEditText
                    android:id="@+id/setting_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_dialog"
                    android:hint="Firstname"
                    android:padding="10dp"
                    android:textSize="13dp" />

                <com.via.green.customizes.CustomEditText
                    android:id="@+id/setting_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_dialog"
                    android:hint="Address"
                    android:padding="10dp"
                    android:textSize="13dp" />

                <com.via.green.customizes.CustomEditText
                    android:id="@+id/setting_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_dialog"
                    android:hint="Phone"
                    android:padding="10dp"
                    android:textSize="13dp" />

                <com.via.green.customizes.CustomEditText
                    android:id="@+id/setting_2nd_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_dialog"
                    android:hint="2nd email"
                    android:padding="10dp"
                    android:textSize="13dp" />

                <com.via.green.customizes.CustomEditText
                    android:id="@+id/setting_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_dialog"
                    android:hint="Date of birth"
                    android:padding="10dp"
                    android:textSize="13dp" />

                <com.via.green.customizes.CustomEditText
                    android:id="@+id/setting_company"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_dialog"
                    android:hint="K57CLC - UET"
                    android:padding="10dp"
                    android:textSize="13dp" />

                <com.via.green.customizes.CustomEditText
                    android:id="@+id/setting_website"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_dialog"
                    android:hint="Google.com.vn"
                    android:padding="10dp"
                    android:textSize="13dp" />

                <com.via.green.customizes.CustomEditText
                    android:id="@+id/setting_fax"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_dialog"
                    android:hint="043696969"
                    android:padding="10dp"
                    android:textSize="13dp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/setting_clear"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/cancel_button"
                android:gravity="center"
                android:text="Clear"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/setting_submit"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/login_login_button"
                android:gravity="center"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>