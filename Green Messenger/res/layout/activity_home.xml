<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.basv.gifmoviewview"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00CC33"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_white" />

        <com.via.green.customizes.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Green messenger"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="vertical" >

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/fragment_home_add_friend"
                    android:layout_width="25dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/contact" />

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/fragment_home_add_friend_triangle"
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/triangle"
                    android:gravity="bottom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/fragment_home_conversation"
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/message" />

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/fragment_home_add_conversation_triangle"
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/triangle"
                    android:gravity="bottom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/fragment_home_personal"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/setting" />

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/fragment_home_add_setting_triangle"
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/triangle"
                    android:gravity="bottom" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>