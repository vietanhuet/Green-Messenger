<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00CC33"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_white" />

        <com.via.green.customizes.CustomTextView
            android:id="@+id/friend_info_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Friend information"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/fragment_friendlist_add_friend"
                    android:layout_width="25dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/contact" />

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/fragment_home_add_conversation_triangle"
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/triangle"
                    android:gravity="bottom" />
            </LinearLayout>

            <com.via.green.customizes.CustomTextView
                android:id="@+id/fragment_friendlist_conversation"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/message" />

            <com.via.green.customizes.CustomTextView
                android:id="@+id/fragment_friendlist_personal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/setting" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/avatar_circle_viet_anh" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal" >

                    <com.via.green.customizes.CustomTextView
                        android:id="@+id/friend_info_closed_friend_button"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Closed friend"
                        android:textColor="#888888"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/fiend_info_pick"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pick" />
                </LinearLayout>

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/frienf_info_unfriend"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/cancel_button"
                    android:gravity="center"
                    android:text="Unfriend"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full name: "
                    android:textColor="#888888"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/friend_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viet Anh Vu"
                    android:textColor="#888888"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textColor="#888888"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/friend_info_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01684015252"
                    android:textColor="#888888"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textColor="#888888"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/friend_info_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="175 Xuan Thuy street"
                    android:textColor="#888888"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second email: "
                    android:textColor="#888888"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/friend_info_2nd_emal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anhvv_57@vnu.edu.vn"
                    android:textColor="#888888"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of birth: "
                    android:textColor="#888888"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <com.via.green.customizes.CustomTextView
                    android:id="@+id/friend_info_dtb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01684015252"
                    android:textColor="#888888"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        
    </LinearLayout>

</LinearLayout>