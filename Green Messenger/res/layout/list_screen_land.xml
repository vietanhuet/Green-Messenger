<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#00CC33"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="horizontal" >

            <com.via.green.customizes.CustomTextView
                android:id="@+id/fragment_friendlist_add_friend"
                android:layout_width="25dp"
                android:layout_height="29dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/contact" />

            <com.via.green.customizes.CustomTextView
                android:id="@+id/fragment_home_add_conversation_triangle"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:background="@drawable/triangle_land"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="horizontal" >

            <com.via.green.customizes.CustomTextView
                android:id="@+id/fragment_friendlist_conversation"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/message" />

            <com.via.green.customizes.CustomTextView
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:background="@drawable/triangle_land_green"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="horizontal" >

            <com.via.green.customizes.CustomTextView
                android:id="@+id/fragment_friendlist_personal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/setting" />

            <com.via.green.customizes.CustomTextView
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:background="@drawable/triangle_land_green"
                android:gravity="right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <com.via.green.customizes.CustomTextView
                        android:id="@+id/fragment_friend_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/add_friend_green_"
                        android:gravity="center" />

                    <com.via.green.customizes.CustomEditText
                        android:id="@+id/fragment_friend_search"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_dialog"
                        android:hint="Search friend"
                        android:paddingLeft="8dp"
                        android:textColor="#575757"
                        android:textCursorDrawable="@null"
                        android:textSize="12dp" />

                    <com.via.green.customizes.CustomTextView
                        android:id="@+id/fragment_friend_search"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/search"
                        android:gravity="center" />
                </LinearLayout>

                <ListView
                    android:id="@+id/android:list"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="20dp" >

                        <ImageView
                            android:id="@+id/list_friend_land_avatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/avatar_circle_viet_anh" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginBottom="2dp"
                                android:orientation="horizontal" >

                                <com.via.green.customizes.CustomTextView
                                    android:id="@+id/list_friend_land_close_friend"
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:text="Closed friend"
                                    android:textColor="#888888"
                                    android:textSize="15dp" />

                                <ImageView
                                    android:id="@+id/list_friend_land_pick"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/pick" />
                            </LinearLayout>

                            <com.via.green.customizes.CustomTextView
                                android:id="@+id/list_friend_land_unfriend_button"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/cancel_button"
                                android:gravity="center"
                                android:text="Unfriend"
                                android:textColor="#FFFFFF"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full name: "
                                android:textColor="#888888"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <com.via.green.customizes.CustomTextView
                                android:id="@+id/list_friend_land_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Viet Anh Vu"
                                android:textColor="#888888"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone: "
                                android:textColor="#888888"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <com.via.green.customizes.CustomTextView
                                android:id="@+id/list_friend_land_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01684015252"
                                android:textColor="#888888"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fax: "
                                android:textColor="#888888"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <com.via.green.customizes.CustomTextView
                                android:id="@+id/list_friend_land_fax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="046969699"
                                android:textColor="#888888"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address: "
                                android:textColor="#888888"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <com.via.green.customizes.CustomTextView
                                android:id="@+id/list_friend_land_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="175 Xuan Thuy street"
                                android:textColor="#888888"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Second email: "
                                android:textColor="#888888"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <com.via.green.customizes.CustomTextView
                                android:id="@+id/list_friend_land_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="anhvv_57@vnu.edu.vn"
                                android:textColor="#888888"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of birth: "
                                android:textColor="#888888"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <com.via.green.customizes.CustomTextView
                                android:id="@+id/list_friend_land_dob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01684015252"
                                android:textColor="#888888"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Company: "
                                android:textColor="#888888"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <com.via.green.customizes.CustomTextView
                                android:id="@+id/list_friend_land_company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01684015252"
                                android:textColor="#888888"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Website: "
                                android:textColor="#888888"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <com.via.green.customizes.CustomTextView
                                android:id="@+id/list_friend_land_website"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01684015252"
                                android:textColor="#888888"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/android:empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/no_friend" />
    </LinearLayout>

</LinearLayout>